<div class="lang lang_fixed">
    <div id="ytWidget" style="display: none"></div>
    <div class="lang__link lang__link_select" data-lang-active="">
        <div class="lang__code lang_{{ html_lang }}"></div>
    </div>
    <div class="lang__list" data-lang-list="" translate="no">
    {% for language in config.plugins['custom-translate-widget'].languages %}
        <a class="lang__link lang__link_sub" data-ya-lang="{{ language }}" title="{{ language_titles[language] }}">
            <div class="lang__code lang_{{ language }}"></div>
        </a>
    {% endfor %}
    </div>
</div>

{% block bottom %}
    <script>
        new CustomTranslate({
            baseLang: "{{ html_lang }}",
            autoTranslate: {{ config.plugins['custom-translate-widget'].auto_translate ? 'true' : 'false' }}
        })
    </script>
{% endblock %}